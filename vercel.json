{
    "version": 2,
    "builds": [
        {
            "src": "php/**/*.php",
            "use": "@vercel/php"
        },
        {
            "src": "css/**",
            "use": "@vercel/static"
        },
        {
            "src": "img/**",
            "use": "@vercel/static"
        },
        {
            "src": "js/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/php/$1"
        }
    ]
}